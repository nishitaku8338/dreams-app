<!DOCTYPE html>
<html>
  <head>
    <title>DreamsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>  <%# フラッシュメッセージを作成%>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>  <%# アラートメッセージを作成%>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title is-4" style="font-family: cursive;">Dreams person</h1>
    <% end %>

    <% if user_signed_in? %>  <%# ログイン状態の場合%>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "button is-dark is-light" %>
    <% else %>                <%# ログイン状態ではない場合%>
      <%= link_to "ログイン", new_user_session_path, class: "button is-dark is-light" %>
      <%= link_to "新規登録", new_user_registration_path, class: "button is-dark is-light" %>
    <% end %>

    <%= yield %>
  </body>
</html>
