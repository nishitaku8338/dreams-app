<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規夢語りを作成
      </h1>
    </div>
  </div>
</section>

<% if @dream.errors.any? %>  <%# エラーがあるか定義する %>
  <div class="notification is-danger">  <%# bulma-railsの記法 %>
    <h2><%= pluralize(@dream.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>  <%# pluralizeメソッドは単語の単数系と複数形を判定してくれる、エラーの数に応じる %>
    <ul>
      <% @dream.errors.full_messages.each do |message| %>    <%# エラーの内容を表示 %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @dream, local: true do |f| %>

          <div class="field">
            <%= f.label :title, "叶えたい事", class: "label" %>       <%# titleラベルを生成 %>
            <%= f.text_field :title, class: "input" %>              <%# title入力欄を生成 %>
          </div>

          <div class="field">
            <%= f.label :body, "なぜ叶えたいのか？", class: "label" %>  <%# bodyラベルを生成 %>
            <%= f.text_area :body, class: "textarea" %>                 <%# body入力欄を生成 %>
          </div>

          <div class="field">
            <%= f.label :imege, "イメージする写真", class: "label" %>   <%# imageラベルを生成 %>
            <%= f.file_field :image, class: "input" %>               <%# image入力欄を生成 %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>          <%# 送信ボタンを生成 %>
        <% end %>
      </div>
    </div>
  </div>
</section>